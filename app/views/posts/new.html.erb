<h1>New Post</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for @post do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :title %>
      <%= f.text_field :title %>
      
      <%= f.label :description %>
      <%= f.text_area :description, :size => "60x2" %>

      <%= f.label :url %>
      <%= f.url_field :url %><br>

      <%= f.hidden_field :user_id, :value => 1 %> 
      

      <%= f.submit "Add post", class: "btn btn-large btn-primary"  %>
    <% end %> 
  </div>
</div>