
<div class='row'>
  <div class='span11 offset1'>
  
    <%= form_for([ @post, @comment ]) do |f| %>
        
        <%= render 'shared/error_messages', object: @comment %>
        
        <%= f.label :text %>
        <%= f.text_area :text, :size => "60x2" %><br />
    
        <%= f.submit class: 'btn btn-large btn-info' %>
    
      <% end %>
  </div>
</div>
