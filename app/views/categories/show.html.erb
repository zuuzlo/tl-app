<% provide(:title, "Category #{@category.name}") %>
<h2>Category: <%=@category.name %></h2>

<div class='span8'>
  <% @posts.each do| post | %>
  <div class='well well-small'>
    <h4 class='media-heading'><%= link_to post.title, post.url %><small> by <%= post.user.name %> <%= post.created_at.to_s %></small></h4>
    <p><%= post.description %></p>
    Origin: <a href='<%= post.url %>'><%= post.url %></a>
    <%if post.categories.size > 0 %>
      <ul class='inline'>Post Categories:
        <%= render post.categories %>
      </ul>
    <% end %>
    <%if post.comments.size > 0 %>
      <p><%= link_to 'Comments ', post_path(post) %><%= post.comments.size %></p>
    <% else %>
      <p><%= link_to 'Comments', post_path(post) %></p>  
    <% end %>
    <ul class='inline'>
      <li><%= link_to 'View', post_path(post) %></li>
      <li>|</li>
      <li><%= link_to 'Edit Post', edit_post_path(post) %></li>
    </ul>
  </div>
  <% end %>
</div>
